

<div class="container">
  <div class="card col-md-12 shadow-sm border-0 mb-3 ">
      <div class="card-header m-0 bg-white">
          <%= render "form", text:'Update post'%>
            <div class="col-md-12 clear-fix">
              <% @posts.each do |p| %>    
                <%= link_to p.author.surname, user_path(p.author), class: 'post-user'%>
                <br />
                <span class="post-time  ">Published : <%= time_ago_in_words p.created_at %> ago</span>

                <div class="card-body post-content">
                  <p class="card-text"><%= p.content %></p>
                </div>
            
          <% end %>
          </div>
      </div>
   </div>
</div>